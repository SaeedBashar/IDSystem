<div class="tab-pane fade pt-3" id="lectures">
    @*<div id="reader" width="600px"></div>*@
    <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                  <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#smallModal">
                        Start a Lecture
                  </button>
                  <button type="button" class="btn btn-outline-secondary btn-sm" id="addStudentToLecture">
                        Add Student To Lecture
                  </button>
              </h5>

              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">Week Number</th>
                    <th scope="col">Lecture Date</th>
                    <th scope="col">Start Time</th>
                    <th scope="col">End Time</th>
                  </tr>
                </thead>
                <tbody id="lectureBody">
                    @foreach(var l in @Model.lectures){
                        <tr>
                            <td scope="row">@l.WeekNo</td>
                            <td>@l.LectureDate</td>
                            <td>@l.StartTime</td>
                            <td>@l.EndTime</td>
                        </tr>
                    }
                </tbody>
              </table>
              
            </div>
        </div>
</div>

<div class="modal fade" id="smallModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Initiate A Lecture</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <form class="row g-3">
                            <div class="col-12">
                                <label for="weekNo" class="form-label">Week Number</label>
                                <input type="text" class="form-control" id="weekNo" placeholder="Week 0">
                            </div>
                            <div class="col-12">
                                <label for="lectureDate" class="form-label">Lecture Date</label>
                                <input type="date" class="form-control" id="lectureDate">
                            </div>
                            
                            <div class="col-12">
                                <label for="startTime" class="form-label">Start Time</label>
                                <input type="time" class="form-control" name="startTime" id="startTime">
                            </div>
                            <div class="col-12">
                                <label for="endTime" class="form-label">End Time</label>
                                <input type="time" class="form-control" name="endTime" id="endTime">
                            </div>
                            <div class="modal-footer">
                                <button id="initLecture" type="button" class="btn btn-primary">Submit</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_Status"/>