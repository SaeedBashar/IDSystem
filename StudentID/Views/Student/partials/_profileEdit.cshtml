<div class="tab-pane fade profile-edit pt-3" id="profile-edit">
    <form>
        <div class="row mb-3">
            <label for="profileImage"
                   class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
            <div class="col-md-8 col-lg-9">
                <img src="image/approved/profile-img.jpg" alt="Profile">
                <div class="pt-2">
                    <button type="button" title="Upload new ID image" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#largeModal">
                        Request Image
                        Change
                    </button>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-lg-3 col-md-4 col-form-label ">Full Name</div>
            <div class="col-lg-9 col-md-8">
                @Model.Student.LastName @Model.Student.OtherNames
                <div class="pt-2">
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#smallModal">
                        Request Name Modification
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="modal fade" id="largeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-4">
                        <img style="display:inline-block; max-width: 120px" src="image/approved/profile-img.jpg"/>
                    </div>
                    <div class="col-lg-4">
                        <form id="imgUpdate" asp-action="ImageUpdate" method="POST" class="row g-3" enctype="multipart/form-data">
                            <label for="image" class="form-label">New Image</label>
                            <input type="file" accept="image/*" class="form-control new-img" name="Image" id="image">
                        </form>
                    </div>
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col">
                                <img id="previewImg" style="display:inline-block; max-width: 120px" src="image/approved/avatar1.png"/>
                            </div>
                        </div>
                        <div class="modal-footer">
                           <button type="submit" class="btn btn-primary btn-sm" form="imgUpdate">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="smallModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Name Modification</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="ModifyName" method="POST" class="row g-3" enctype="multipart/form-data">
                            <div class="col-12">
                                <label for="OLastName" class="form-label">Last Name(Current)</label>
                                <input type="text" class="form-control" disabled value="@Model.Student.LastName">
                            </div>
                            <div class="col-12">
                                <label for="OOtherNames" class="form-label">Other Names(Current)</label>
                                <input type="text" class="form-control" disabled value="@Model.Student.OtherNames">
                            </div>
                            <br /><hr />
                            <div class="col-12">
                                <label for="LastName" class="form-label">Last Name(New)</label>
                                <input type="text" class="form-control" name="LastName" id="LastName">
                            </div>
                            <div class="col-12">
                                <label for="OtherNames" class="form-label">Other Names(New)</label>
                                <input type="text" class="form-control" name="OtherNames" id="OtherNames">
                            </div>
                            <div class="col-12">
                                <label for="image" class="form-label">Affidavit / Proof Of Name</label>
                                <input type="file" accept="image/*" class="form-control" name="Image" id="Image">
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>