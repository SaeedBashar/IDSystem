<div class="tab-pane fade pt-3" id="lectures">
    
    <div class="card">
            <div class="card-body">
              <h5 class="card-title">Join An OnGoing Lecture</h5>

              <div class="accordion accordion-flush" id="faq-group-1">
                  
                  @foreach(var c in Model.courses)
                  {
                <div class="accordion-item">
                  <h2 class="accordion-header">
                    <button class="accordion-button collapsed" data-bs-target="#id-@c.Id" type="button" data-bs-toggle="collapse">
                      @c.CourseName - @c.CourseCode
                    </button>
                  </h2>
                  <div id="id-@c.Id" class="accordion-collapse collapse" data-bs-parent="#faq-group-1">
                    <div class="accordion-body">
                        <button 
                            studentNo="@Model.info.IDCard.StudentNo"
                            indexNo="@Model.info.IDCard.IndexNo" 
                            courseId="@c.Id" 
                            class="btn btn-info lectBtn">Join Lecture</button>
                    </div>
                  </div>
                </div>

                  }

              </div>

            </div>
          </div>
</div>
