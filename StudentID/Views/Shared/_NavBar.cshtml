@using Microsoft.AspNetCore.Http
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between">
      <a href="index.html" class="logo d-flex align-items-center">
        <img src="assets/img/logo.png" alt="">
        <span class="d-none d-lg-block">Student ID</span>
      </a>
    </div>
    <nav class="header-nav ms-auto">
      <ul class="d-flex align-items-center">
          @if(ViewData["LastName"] != null)
            {
        <li class="nav-item dropdown">

          <a class="nav-link nav-icon" href="#" data-bs-toggle="dropdown">
            <i class="bi bi-bell"></i>
            <span id="notifyBadge" class="badge bg-primary badge-number"></span>
          </a>

          <ul id="notifyDown" style="width: 300px" class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications">
            <div id="notifyNm"></div>
            <div id="notifyIu"></div>
          </ul>

        </li>
            }
        <li class="nav-item dropdown pe-3">
            @if(ViewData["LastName"] != null)
            {
                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                    <i style="font-size: 32px" class="bi bi-person"></i>
                    <span id="navName" class="d-none d-md-block dropdown-toggle ps-2">@($"{ViewData["LastName"]} {ViewData["OtherNames"]}")</span>
                </a>
            }

            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                <li>
                <a asp-controller="Auth" asp-action="LogOut" class="dropdown-item d-flex align-items-center">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Sign Out</span>
                </a>
                </li>
            </ul>
        </li>
      </ul>
    </nav>
  </header>