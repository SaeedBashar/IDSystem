<div class="tab-pane fade profile-edit pt-3" id="name-modify">
    <div class="row">
        <div class="col-12">
            <div class="card top-selling">

                <div class="card-body pb-0">

                    <table class="table table-borderless">
                        <thead>
                            <tr>
                                <th scope="col">Student No</th>
                                <th scope="col">Old Name</th>
                                <th scope="col">New Name</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody id="nameModifyContent">
                            @if (Model.nameModifications.Count > 0)
                            {
                                @foreach (var stud in Model.nameModifications)
                                {
                                    <tr id="@stud.Student.Id" >
                                        <td>@stud.IDCard.StudentNo</td>
                                        <td>@stud.Student.LastName @stud.Student.OtherNames</td>
                                        <td>@stud.MStud.LastName @stud.MStud.OtherNames</td>
                                        <td><button onclick="viewDetails(this)" class="btn btn-success">View</button><i class="d-none">@stud.Student.Id</i></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td class="text-center" colspan="4">No Name Modification Request Available</td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
</div>

<button id="nameModifyDetail" type="button" class="btn btn-primary d-none" data-bs-toggle="modal" data-bs-target="#ExtralargeModal">
    Extra Large Modal
</button>

<div class="modal fade" id="ExtralargeModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Student Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-footer" style="border-bottom: 1px solid #dee2e6;">
                <div class="d-inline" style="flex:1">
                    <small class="mx-2" id="currentName"></small>
                    <i class="bi bi-arrow-left-right"></i>
                    <small class="mx-2" id="newName"></small>
                </div>
                <button id="acceptNameModify" type="button" class="btn btn-primary">Approve</button>
                <button id="rejectNameModify" type="button" class="btn btn-danger">Reject</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-3">
                        <h3>Proof Of Name</h3>
                        <img style="display: block;max-width: 300px;" id="proofImg" src="#">
                    </div>
                    <div class="col-lg-9">
                        <div class="card">
                    <div class="card-body">
                        
                        <form id="detailForm" class="row g-3">
                            <div class="col-md-6">
                                <label for="inputName5" class="form-label">Last Name</label>
                                <input type="text" disabled class="form-control" id="lastName">
                            </div>
                            <div class="col-md-6">
                                <label for="inputName5" class="form-label">Other Names</label>
                                <input type="text" disabled class="form-control" id="otherNames">
                            </div>
                            <div class="col-md-6">
                                <label for="inputCity" class="form-label">Programme</label>
                                <input type="text" disabled class="form-control" id="program">
                            </div>
                            <div class="col-md-6">
                                <label for="inputCity" class="form-label">Student Number</label>
                                <input type="text" disabled class="form-control" id="studentNo">
                            </div>
                            <div class="col-md-6">
                                <label for="inputCity" class="form-label">Index Number</label>
                                <input type="text" disabled class="form-control" id="indexNo">
                            </div>
                            <div class="col-md-6">
                                <label for="inputEmail5" class="form-label">Email</label>
                                <input type="email" disabled class="form-control" id="email">
                            </div>
                            <div class="col-md-6">
                                <label for="inputPassword5" class="form-label">Phone</label>
                                <input type="text" disabled class="form-control" id="phone">
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">Faculty</label>
                                <input type="text" disabled class="form-control" id="faculty">
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress2" class="form-label">College</label>
                                <input type="text" disabled class="form-control" id="college">
                            </div>

                            <div class="col-md-6">
                                <label for="inputZip" class="form-label">Hall Of Affiliation</label>
                                <input type="text" disabled class="form-control" id="hallOfAffiliation">
                            </div>
                        </form>

                    </div>
                </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>


<partial name="_Status"/>