<div class="tab-pane fade profile-edit pt-3" id="name-modify">
    <div class="row">
        <div class="col-12">
              <div class="card top-selling">

                <div class="card-body pb-0">

                  <table class="table table-borderless">
                    <thead>
                      <tr>
                        <th scope="col">Student No</th>
                        <th scope="col">Old Name</th>
                        <th scope="col">New Name</th>
                        <th scope="col"></th>
                      </tr>
                    </thead>
                    <tbody id="nameModifyContent">
                        @if(Model.Count > 0)
                         {
                             @foreach(var stud in Model)
                              {
                            <tr>
                             <td>@stud.IDCard.StudentNo</td>
                             <td>@stud.Student.LastName @stud.Student.OtherNames</td>
                             <td>@stud.MStud.LastName @stud.MStud.OtherNames</td>
                             <td><button onclick="viewDetails(this)" class="btn btn-success">View</button></td>
                           </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4">No Name Modification Request Available</td>
                                </tr>
                            }

                    </tbody>
                  </table>

                </div>

              </div>
            </div>
    </div>     
</div>

